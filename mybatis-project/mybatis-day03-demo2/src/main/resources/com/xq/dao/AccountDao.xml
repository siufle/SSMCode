<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xq.dao.AccountDao">

    <resultMap id="accountMap" type="com.xq.pojo.Account">
        <id property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="money" column="money"/>
        <!--进行一对一关联查询时 进行字段映射-->
        <association property="user" javaType="user">
            <result property="username" column="username"/>
            <result property="address" column="address"/>
        </association>
    </resultMap>

    <select id="findAccount" resultMap="accountMap">
        SELECT account.*, `user`.username, `user`.address FROM account, `user` WHERE account.UID = `user`.id
    </select>
</mapper>